{
  "name": "@challenge/backend-api",
  "version": "0.1.0",
  "scripts": {
    "clean": "rm -rf ./dist",
    "test:unit": "jest --config=../../jest.config.ts --testPathPattern=backend-api",
    "build": "npm run clean && npm install && tsup-node",
    "build:watch": "npm run build -- --watch",
    "dev": "npx ts-node dist/index.js",
    "dev:watch": "nodemon --watch dist --exec ts-node dist/index.js",
    "start": "concurrently \"npm run build:watch\" \"sleep 20 && npm run dev:watch\" --kill-others"
  },
  "engines": {
    "node": "22"
  },
  "type": "module",
  "main": "index.ts",
  "dependencies": {
    "@challenge/database-services": "*",
    "@challenge/library-schemas": "*",
    "@challenge/library-utils": "*",
    "@challenge/types": "*",
    "fastify": "5.1.0"
  },
  "devDependencies": {
    "@types/node": "22.13.9",
    "concurrently": "9.1.0",
    "nodemon": "3.1.7",
    "ts-node": "10.9.2",
    "tsup": "8.4.0",
    "typescript": "5.8.2"
  },
  "private": true
}
